<% for(var i = 0; i < jokes.length; i++) {%>
    <div class="divider invisible"></div>
    <div class="card w-96 bg-neutral text-neutral-content">
        <div class="card-body items-center text-center">
            <h2 class="card-title"><%= jokes[i].setup %></h2>
            <p><%= jokes[i].punchline %></p>
            </div>
            <button class="btn gap-2 no-animation">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
                <h3 class="text-center"><%= jokes[i].likes %></h3>
                <div class="divider invisible"></div>
                <div class="divider invisible"></div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" class="h-6 w-6" width="24" height="24" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                <h3 class="text-center"><%= jokes[i].views %></h3>
            </button> 
            <!-- The button to open modal -->
            <label for="my-modal-4" class="btn btn-error modal-button">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" class="h-6 w-6" width="24" height="24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 24h-14c-1.104 0-2-.896-2-2v-17h-1v-2h6v-1.5c0-.827.673-1.5 1.5-1.5h5c.825 0 1.5.671 1.5 1.5v1.5h6v2h-1v17c0 1.104-.896 2-2 2zm-14-2.5c0 .276.224.5.5.5h13c.276 0 .5-.224.5-.5v-16.5h-14v16.5zm5-18.5h4v-1h-4v1z"/></svg>
            </label>

            <!-- Put this part before </body> tag -->
            <input type="checkbox" id="my-modal-4" class="modal-toggle" />
            <label for="my-modal-4" class="modal cursor-pointer">
                <label class="modal-box relative" for="">
                    <h3 class="text-lg font-bold">CONFIRM</h3>
                    <p class="py-4">Are you sure you want to delete this item?</p>
                    <div class="modal-action">
                        <form class="btn btn-error" action="/joke/deleteJoke/<%= jokes[i]._id %>?_method=DELETE" method="POST">
                            <button type="submit">
                                DELETE
                            </button>
                        </form>
                    </div>
                </label>
            </label>
        </div>
    </div>
<% } %>