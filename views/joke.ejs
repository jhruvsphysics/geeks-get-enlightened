<%- include('partials/header') -%>
<div class="card w-96 bg-neutral text-neutral-content">
    <div class="card-body items-center text-center"">
        <h2 class="card-title"><%=joke.setup%></h2>
        <div class="divider"></div> 
        <p>
            <%=joke.punchline%>
        </p>
    </div>
    <div class="divider"></div> 
    <form class="btn gap-2" action="/joke/likeJoke/<%= joke._id %>?_method=PUT" method="POST">
        <button class="btn btn-ghost gap-2" type="submit">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>
            <h3>
                <%= joke.likes %>
            </h3>
        </button>
    </form>
    <div class="btn gap-2 no-animation">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg> 
        <h3 class="text-center"><%= joke.views %></h3>
    </div>
    <div class="divider"></div> 
</div>
<div class="divider"></div> 
<div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body items-center text-center">
        <div class="card-actions justify-end">
            <a class="btn btn-primary" href="/joke/getJoke">:)</a>
        </div>
    </div>
</div>

<%- include('partials/footer') -%>